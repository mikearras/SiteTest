<html>

<h3>Add new order:</h3>
<form onSubmit="event.preventDefault" id="addorder" action="/order" method="post">
    Order Date: <input type="date" name="orderDate" id="date"><br>
    Member: <select name="memberID">
        {{#each members}}
        <option value="{{memberID}}">{{firstName}} {{lastName}}</option>
        {{/each}}
    </select> <br>
    <input type="submit" value="Submit">
</form>
<br />



{{!-- SHOW ALL DATA IN DATABASE --}}
<h3>Current Orders:</h3>
<table>
    <thead>
        <th>orderDate</th>
        <th>memberId</th>
    </thead>
    <tbody>
        {{#each order}}
        <tr>
            <td class="date">{{orderDate}}</td>
            <td class="memberID">{{memberID}}</td>
            {{!-- run javascript delete --}}
            <td class="deletebtn"><button onclick="deleteOrder({{memberID}})">Delete</button></td>
            {{!-- go to update page --}}
            <td><a href="/authorRecord/{{memberID}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

</html>
